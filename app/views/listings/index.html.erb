<h1>Available Listings</h1>



<table>
  <thead>
    <tr>
      <th>Building Image</th>
      <th><%= sort_link @search, :city, "City" %></th>
      <th><%= sort_link @search, :address, "Address" %></th>
      <th>Suite</th>
      <th><%= sort_link @search, :size, "Size" %></th>
      <th>Building type</th>
      <th>Building class</th>
      <th><%= sort_link @search, :asking_rate, "Asking Rate" %></th>
      <th>Opex</th>
      <th>Lease type</th>
      <th>Brokerage</th>
      <th>Notes</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @listings.each do |listing| %>
      <tr>
        <td><%= image_tag listing.image.url(:thumb) %></td>
        <td><%= listing.city %></td>
        <td><%= listing.address %></td>
        <td><%= listing.suite %></td>
        <td><%= listing.size %></td>
        <td><%= listing.building_type %></td>
        <td><%= listing.building_class %></td>
        <td><%= listing.asking_rate %></td>
        <td><%= listing.opex %></td>
        <td><%= listing.lease_type %></td>
        <td><%= listing.brokerage %></td>
        <td><%= listing.notes %></td>
        <td><%= link_to 'Show', listing %></td>
        <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
        <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Listing', new_listing_path %>
<%= link_to 'Return to Search', for_lease_path %>
